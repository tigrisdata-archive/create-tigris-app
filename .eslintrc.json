{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:unicorn/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["functional", "unused-imports"],
  "rules": {
    "unicorn/prevent-abbreviations": "off",
    "unused-imports/no-unused-imports": "error",
    "quotes": "off"
  },
  "ignorePatterns": ["dist/*"]
}
